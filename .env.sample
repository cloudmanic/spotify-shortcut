# Spotify API Credentials (from https://developer.spotify.com/dashboard)
SPOTIFY_CLIENT_ID=your-client-id-here
SPOTIFY_CLIENT_SECRET=your-client-secret-here

# Optional: Playlist ID (from playlist URL: https://open.spotify.com/playlist/PLAYLIST_ID)
SPOTIFY_PLAYLIST_ID=your-playlist-id-here

# Optional: Specific device name to play on (leave empty to use first active device)
SPOTIFY_DEVICE_NAME=

# Optional: OAuth redirect URI (must match Spotify Developer Dashboard setting)
SPOTIFY_REDIRECT_URI=http://127.0.0.1:8888/callback
